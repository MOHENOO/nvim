{
  // "diagnostic
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextPrefix": " # ",
  "diagnostic.checkCurrentLine": true,
  // "diagnostic.messageTarget": "echo",
  // suggest
  "suggest.timeout": 5000,
  "suggest.noselect": false,
  "suggest.snippetIndicator": "â–º",
  // snippets
  "snippets.ultisnips.directories": ["UltiSnips", "gosnippets/UltiSnips"],
  // imselect
  "imselect.enableStatusItem": false,
  "imselect.defaultInput": "com.apple.keylayout.US",
  "imselect.enableFloating": false,
  // explorer
  "explorer.icon.enableNerdfont": true,
  // project
  "project.rootPatterns": [
      ".git",
      "virtualenv"
  ],
  // git
  "git.enableGutters": true,
  // cSpell
  "cSpell.enabled": false,
  "cSpell.allowCompoundWords": true,
  // python
  "python.formatting.provider": "yapf",
  // only use pyright as lint
  "python.linting.enabled": false,
  "python.jediEnabled": true,
  // without limit jedi
  "python.jediMemoryLimit": -1,
  // pyright just use pyright as lint
  "pyright.disableLanguageServices": true,
  "pyright.typeCheckingMode": "basic",
  "pyright.useLibraryCodeForTypes": true,
  "python.analysis.diagnosticMode": "openFilesOnly",
  // go
  "go.goplsOptions": {
    "completeUnimported": true,
    "completionDocumentation": true,
    "deepCompletion": true,
    "matcher": "fuzzy",
    "hoverKind": "SynopsisDocumentation",
    "staticcheck": true,
    "usePlaceholders": true
  }
}
